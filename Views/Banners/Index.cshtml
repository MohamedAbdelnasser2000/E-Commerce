@model IEnumerable<E_Commerse_Store.Models.Banner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discription1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discription2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discription3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription3)
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.Picture1))
            {
                <img class="card-img-bottom d-block radius-image-full"
                     src="~/Content/Image/@Url.Content(item.Picture1)"
                     height="50"
                     alt="Card image cap" />
            }
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.Picture2))
            {
                <img class="card-img-bottom d-block radius-image-full"
                     src="~/Content/Image/@Url.Content(item.Picture2)"
                     height="50"
                     alt="Card image cap" />
            }
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.Picture3))
            {
                <img class="card-img-bottom d-block radius-image-full"
                     src="~/Content/Image/@Url.Content(item.Picture3)"
                     height="50"
                     alt="Card image cap" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
