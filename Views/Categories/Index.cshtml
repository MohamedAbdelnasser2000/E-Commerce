@model IEnumerable<E_Commerse_Store.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture2)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr >
                <td>
                    @Html.ActionLink(item.Name, "Index", "SubCategories", new { category = item.Name }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Picture1))
                    {
                        <img class="card-img-bottom d-block radius-image-full"
                             src="~/Content/Image/@Url.Content(item.Picture1)"
                             height="50"
                             alt="Card image cap" />
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Picture2))
                    {
                        <img class="" style="width:20px; height:20px"
                             src="~/Content/Image/@Url.Content(item.Picture2)"
                             alt="" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Categories",new { id = item.Id } )" class="btn btn-info">Edit</a>
                    <a href="@Url.Action("Delete", "Categories",new { id = item.Id } )" class="btn btn-danger">Delete</a>

                    @*<button class="btn-success">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
            </tbody>
            }

    </table>
